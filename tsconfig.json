{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "removeComments": true,

    /* Strict Type-Checking Options */
    // "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
